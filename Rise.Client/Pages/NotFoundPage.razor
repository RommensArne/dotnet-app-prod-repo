@inject NavigationManager Navigation

<MudContainer  Class=" md:w-3/4 d-flex flex-column align-center justify-center mt-8">
    <MudPaper Class="p-4 text-center" Elevation="3">
        <MudText Typo="Typo.h1" Class="mb-3" Color="Color.Primary">
            404
        </MudText>
        <MudText Typo="Typo.h6" Class="mb-4">
            Pagina niet gevonden
        </MudText>
        <MudText Typo="Typo.body1" Class="mb-4">
            Het lijkt erop dat de pagina die je zoekt niet bestaat of is verplaatst.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="GoToHomePage">
            Terug naar home
        </MudButton>
    </MudPaper>
</MudContainer>

@code {
    private void GoToHomePage()
    {
        Navigation.NavigateTo("/");
    }
}